<widgets>
    <widget type="national_journal">
        <config>
            <url>/apps/widgetizer/widgetizer.php</url>
            <intro_text><![CDATA[Use this page to build a RSS widget for your site.]]>
            </intro_text>
        </config>
        <options>
            <option>
                <name>RSS Feed URL</name>
                <short_name>feed</short_name>
                <default>http://service.nationaljournal.com/Feed/dfm/9723529352359/olU2hrX5g</default>
                <instructions>Enter the RSS feed URL</instructions>
                <type>string</type>
            </option>
            <option>
                <name>Template name</name>
                <short_name>tpl</short_name>
                <default>national-journal-politics</default>
                <instructions>Enter the name of the template you would like to use.</instructions>
                <type>string</type>
                <required>yes</required>
                <form_type>selection</form_type>
                <!--Selections are needed if the form type is a drop-down menu-->
                <selections>
                    <selection value="national-journal-politics">National Journal</selection>
                </selections>
            </option>
            <option>
                <name>Number of items</name>
                <short_name>num</short_name>
                <default>5</default>
                <instructions>Enter the number of items you would like to display.</instructions>
                <type>numeric</type>
                <required>yes</required>
            </option>
            <option>
                <name>Site ID (used for domain)</name>
                <short_name>siteID</short_name>
                <default>twin-cities</default>
                <instructions>Example: twin-cities</instructions>
                <type>string</type>
            </option>
            <option>
                <name>Section</name>
                <short_name>section</short_name>
                <default>thetrail</default>
                <instructions>A string indicating the origin of a link within your section pages, will be used to target ads.</instructions>
                <type>string</type>
            </option>
            <option>
                <name>National Journal link domain</name>
                <short_name>source</short_name>
                <default>http://politics-news.nationaljournal.com</default>
                <instructions>Put the correct domain name in (with http://)</instructions>
                <type>url</type>
                <required>yes</required>
            </option>
            <option>
                <name>Template cache</name>
                <short_name>tcache</short_name>
                <default>120</default>
                <instructions>How long the template should be cached, in minutes</instructions>
                <type>numeric</type>
            </option>
            <option>
                <name>Feed data cache</name>
                <short_name>acache</short_name>
                <default>120</default>
                <instructions>How long the feed data should be cached, in minutes</instructions>
                <type>numeric</type>
            </option>
            <option>
                <name>Widget output</name>
                <short_name>out</short_name>
                <default>js</default>
                <instructions>Output in Javascript (js) or HTML (html)</instructions>
                <type>string</type>
            </option>

        </options>
    </widget> 
