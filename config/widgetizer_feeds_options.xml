                    <selection>
                        <value>rss</value>
                        <name>Generic RSS</name>
                        <default>yes</default>
                    </selection>
                    <selection>
                        <value>rss-with-image</value>
                        <name>RSS with available image</name>
                        <default>no</default>
                    </selection>
                    <selection>
                        <value>rss-visual-rotator</value>
                        <name>Visual Rotator with images</name>
                        <default>no</default>
                    </selection>
                </selections>
            </option>
            <option>
                <name>Number of items</name>
                <short_name>num</short_name>
                <default>5</default>
                <instructions>Enter the number of items you would like to display.</instructions>
                <type>numeric</type>
                <required>yes</required>
            </option>
            <option>
                <name>Main Title </name>
                <short_name>main_title</short_name>
                <default></default>
                <instructions>(Optional) Enter a name for your content (could be used as a title) </instructions>
                <type>string</type>
                <required>no</required>
            </option>
            <option>
                <name>Default image</name>
                <short_name>defImg</short_name>
